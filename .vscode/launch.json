{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug - Chrome",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceFolder}/index-debug.html"
    },
    {
      "name": "Release - Chrome",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceFolder}/build/index.html"
    },
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Debug - Firefox",
      "file": "${workspaceFolder}/index-debug.html",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "firefox",
      "request": "launch",
      "reAttach": true,
      "name": "Release - Firefox",
      "file": "${workspaceFolder}/build/index.html",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
